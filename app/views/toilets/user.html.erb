<h1><%= @user.name %> Toilets</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Cleanliness</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @toilets.each do |toilet| %>
      <tr>
        <td><%= toilet.name %></td>
        <td><%= toilet.price %></td>
        <td><%= toilet.cleanliness %></td>
        <td><%= link_to 'Show', toilet %></td>
      </tr>
    <% end %>
  </tbody>
</table>
