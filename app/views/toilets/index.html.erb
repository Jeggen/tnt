<p id="notice"><%= notice %></p>

<h1>Listing Toilets</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th>Price</th>
      <th>Cleanliness</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @toilets.each do |toilet| %>
      <tr>
        <td><%= toilet.name %></td>
        <td><%= toilet.user.name %></td>
        <td><%= toilet.price %></td>
        <td><%= toilet.cleanliness %></td>
        <td><%= link_to 'Show', toilet %></td>
        <td><%= link_to 'Visit', visits_path %></td>
<% if user_signed_in? %>
     <% if toilet.user == current_user %>
        <td><%= link_to 'Edit', edit_toilet_path(toilet) %></td>
        <td><%= link_to 'Destroy', toilet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
