<p id="notice"><%= notice %></p>
<div style="background-color:white; color:black; padding:20px; filter: alpha(opacity=80); opacity: 0.8;">
<h1>Listing Visits</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Toilet</th>
      <th>User</th>
      <th>Stars</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @visits.each do |visit| %>
      <tr>
        <td><%= visit.toilet.name %></td>
        <td><%= visit.user.name %></td>
        <td><%= visit.stars %></td>
        <td><%= visit.comment %></td>
        <td><%= link_to 'Show', visit %></td>
        <td><%= link_to 'Edit', edit_visit_path(visit) %></td>
        <td><%= link_to 'Destroy', visit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>
